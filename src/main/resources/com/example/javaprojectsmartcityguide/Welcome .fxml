<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="530.0" prefWidth="750.0" style="-fx-background-color: #DDDBC3;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javaprojectsmartcityguide.LoginController">
   <children>
      <Label alignment="CENTER" layoutX="330.0" layoutY="45.0" prefHeight="68.0" prefWidth="184.0" style="-fx-background-color: #AFB764;" styleClass="labelLogo" stylesheets="@CSS/Fonts.css" text="Smart City Guide " textAlignment="JUSTIFY" textFill="#3d4337">
         <font>
            <Font name="Roboto Black" size="20.0" />
         </font>
      </Label>
      <ImageView fitHeight="68.0" fitWidth="76.0" layoutX="263.0" layoutY="45.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Images/logo.jpg" />
         </image>
      </ImageView>
      <Label layoutX="97.0" layoutY="151.0" maxWidth="554.0" minWidth="379.0" prefHeight="157.0" prefWidth="554.0" styleClass="welcomText" stylesheets="@CSS/Fonts.css" text="Explore top hotels, restaurants, and attractions in your city all in one place. Please choose your access type below. Log in as Admin to manage data and access advanced features, or continue as a Visitor to simply browse and explore. Enjoy your journey!" textAlignment="CENTER" textFill="#3d4337" wrapText="true" />
      <Label layoutX="266.0" layoutY="153.0" styleClass="welcomText" stylesheets="@CSS/Fonts.css" text="Welcome to Smart City Guide!" textFill="#3d4337" />
      <Button layoutX="273.0" layoutY="313.0" mnemonicParsing="false" prefHeight="43.0" prefWidth="184.0"
              style="-fx-background-color: #D3751E;" styleClass="buttonWelcom" stylesheets="@CSS/Fonts.css"
              text="Admin" textFill="#dddbc3"
              onAction="#openAdminLogin"> <!-- ربط الزرار بالميثود -->
         <font>
            <Font name="Banyeh" size="12.0" />
         </font>
      </Button>

      <Button layoutX="274.0" layoutY="382.0" mnemonicParsing="false" prefHeight="43.0" prefWidth="184.0"
              style="-fx-background-color: #D3751E;" styleClass="buttonWelcom" stylesheets="@CSS/Fonts.css"
              text="Visitor" textFill="#dddbc3"
              onAction="#openAdminLogin"> <!-- ربط الزرار بالميثود -->
         <font>
            <Font name="Banyeh" size="12.0" />
         </font>
      </Button>


      <Label layoutX="200.0" layoutY="459.0" prefHeight="26.0" prefWidth="438.0" styleClass="tip-label" stylesheets="@CSS/Fonts.css" text="Tip: For full access and data management features, log in as an Admin" textFill="#3d4337" />
      <Label layoutX="200.0" layoutY="483.0" prefHeight="26.0" prefWidth="372.0" styleClass="visitor-label" stylesheets="@CSS/Fonts.css" text="If you just want to discover the city, feel free to continue as a Visitor." textFill="#3d4337" />
   </children>
</AnchorPane>
