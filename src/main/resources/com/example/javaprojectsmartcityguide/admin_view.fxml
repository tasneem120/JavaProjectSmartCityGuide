<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="530.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javaprojectsmartcityguide.model.AdminController">
    <children>
        <HBox layoutX="10.0" layoutY="10.0" prefHeight="34.0" spacing="10.0" />
        <VBox layoutX="10.0" layoutY="50.0" prefHeight="480.0" prefWidth="300.0" spacing="10.0" style="-fx-background-color: #f4f4f4; -fx-background-radius: 20;">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <Label text="Add New Place" textFill="#143261">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>

                <Label text="Name" textFill="#143261">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="nameField" />

                <Label text="Category" textFill="#143261">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="categoryBox" maxWidth="1.7976931348623157E308" prefHeight="26.0" prefWidth="270.0" />

                <Label text="Location" textFill="#143261">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="locationField" />

                <Label text="Rating" textFill="#143261">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="ratingField" promptText="Enter 1-5" />

                <HBox alignment="CENTER" layoutX="25.0" layoutY="297.0" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                    <children>
                        <Button fx:id="addButton1" mnemonicParsing="false" onAction="#addPlace" prefWidth="60.0" style="-fx-background-color: #143261;" text="Add" textFill="#fafbfc">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                        <Button fx:id="updateButton1" mnemonicParsing="false" onAction="#updatePlace" prefWidth="60.0" style="-fx-background-color: #f39c12;" text="Update" textFill="#fafbfc">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                        <Button fx:id="deleteButton1" mnemonicParsing="false" onAction="#deletePlace" prefWidth="60.0" style="-fx-background-color: #e74c3c;" text="Delete" textFill="#fafbfc">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets top="30.0" />
                    </VBox.margin>
                </HBox>

                <Button mnemonicParsing="false" onAction="#handleBack" text="Back" textFill="#143261">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
            </children>
            <effect>
                <DropShadow />
            </effect>
        </VBox>

        <VBox layoutX="320.0" layoutY="50.0" prefHeight="480.0" prefWidth="420.0" spacing="10.0" style="-fx-background-color: #e0e0e0;">
            <children>
                <TextField fx:id="searchField" promptText="Search by name..." />
                <TableView fx:id="placesTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colName" prefWidth="100.0" text="Name" />
                        <TableColumn fx:id="colCategory" prefWidth="100.0" text="Category" />
                        <TableColumn fx:id="colLocation" prefWidth="100.0" text="Location" />
                        <TableColumn fx:id="colRating" prefWidth="110.0" text="Rating" />
                    </columns>
                </TableView>
            </children>
        </VBox>

        <Label layoutX="25.0" layoutY="9.0" text="Manage Places" textFill="#143261">
            <font>
                <Font name="System Bold Italic" size="24.0" />
            </font>
        </Label>
        <Label layoutX="391.0" layoutY="14.0" text="Manage and organize city locations and services" textFill="#143261" />
    </children>
</AnchorPane>
